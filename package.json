{
  "type": "module",
  "name": "gitlab-ci-local",
  "description": "Tired of pushing to test your .gitlab-ci.yml?",
  "main": "src/index.ts",
  "bin": "src/index.ts",
  "version": "4.64.1",
  "scripts": {
    "build": "bun build --compile --minify --sourcemap src/index.ts --outfile bin/gitlab-ci-local",
    "build:linux": "bun build --compile --minify --sourcemap --target=bun-linux-x64 src/index.ts --outfile bin/linux/gitlab-ci-local",
    "build:macos-x64": "bun build --compile --minify --sourcemap --target=bun-darwin-x64 src/index.ts --outfile bin/macos-x64/gitlab-ci-local",
    "build:macos-arm64": "bun build --compile --minify --sourcemap --target=bun-darwin-arm64 src/index.ts --outfile bin/macos-arm64/gitlab-ci-local",
    "build:win": "bun build --compile --minify --sourcemap --target=bun-windows-x64 src/index.ts --outfile bin/win/gitlab-ci-local.exe",
    "build-all": "bun build:linux && bun build:win && bun build:macos-x64 && bun build:macos-arm64",
    "check-all": "bun run build  && bun lint && bun run coverage && bun audit",
    "audit": "bun audit --parseable",
    "lint": "eslint .",
    "test": "bun test",
    "test-except-dind": "bun test --filter '(?!.*dind)'",
    "coverage": "bun test --coverage --verbose",
    "start": "bun src/index.ts --cwd examples/docker-compose-nodejs",
    "fetch-and-patch-schema": "curl https://gitlab.com/gitlab-org/gitlab/-/raw/master/app/assets/javascripts/editor/schema/ci.json -sf | jq 'del(.. | .pattern?)' > src/schema/schema.json"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "axios": "^1.13.2",
    "base64url": "^3.0.1",
    "camelcase": "^9.0.0",
    "chalk": "^5.6.2",
    "chalk-template": "^1.1.2",
    "checksum": "^1.0.0",
    "deep-extend": "^0.6.0",
    "dotenv": "^17.2.3",
    "execa": "^5.1.1",
    "fs-extra": "^11.3.3",
    "globby": "^16.1.0",
    "js-yaml": "^4.1.1",
    "jsonpointer": "^5.0.1",
    "micromatch": "^4.0.8",
    "object-traversal": "^1.0.1",
    "p-map": "^7.0.4",
    "pretty-hrtime": "^1.0.3",
    "re2js": "^1.2.0",
    "semver": "^7.7.3",
    "split2": "^4.2.0",
    "terminal-link": "^5.0.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/base64url": "^2.0.7",
    "@types/checksum": "^0.1.35",
    "@types/deep-extend": "^0.6.2",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.10",
    "@types/pretty-hrtime": "^1.0.3",
    "@types/semver": "^7.7.1",
    "@types/split2": "^4.2.3",
    "@types/yargs": "^17.0.35",
    "axios-mock-adapter": "^2.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.39.2",
    "typescript-eslint": "^8.50.1"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/firecow/gitlab-ci-local.git"
  },
  "author": "Mads Jon Nielsen <madsjon@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/firecow/gitlab-ci-local/issues"
  },
  "homepage": "https://github.com/firecow/gitlab-ci-local#readme",
  "keywords": [
    "git",
    "gitlab",
    "pipeline",
    "local",
    "ci",
    "cd",
    "push",
    "untracked",
    "uncomitted",
    "gitlab-ci"
  ],
  "files": [
    "src/**/*.ts",
    "src/**/*.json"
  ]
}
